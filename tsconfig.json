{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "ES2020",                   
    "moduleDetection": "force",           
    "moduleResolution": "node",           
    "resolveJsonModule": true,            
    "allowSyntheticDefaultImports": true, 
    "allowJs": true,           
    "outDir": "dist",                   
    "rootDir": ".",                   
    "strict": true,                    
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true                  
  },
  "include": [
    "**/*.ts"                            
  ],
  "exclude": [
    "node_modules",                       
    "dist",                               
    ".config/**/*.js"                   
  ]
}
